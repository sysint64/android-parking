<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="ghost_button_background_pressed">@color/buttonPrimaryText</item>
        <item name="ghost_button_text_color">@color/buttonPrimaryText</item>
        <item name="ghost_button_text_color_pressed">#fff</item>
        <item name="ghost_button_text_color_disabled">#5f000000</item>
        <item name="ghost_button_text_size">14sp</item>
        <item name="ghost_button_height">@dimen/ghostButtonHeight</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="colorControlNormal">#fff</item>
        <item name="colorAccent">#fff</item>
    </style>

    <style name="AppTheme.RoundButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/selector_round_button_text</item>
        <item name="android:background">@drawable/selector_round_button</item>
    </style>

    <style name="AppTheme.GhostButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/selector_ghost_button_text</item>
        <item name="android:background">@drawable/selector_ghost_button</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textSize">?attr/ghost_button_text_size</item>
    </style>

    <style name="AppTheme.RoundGhostWhiteButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/selector_round_ghost_white_button_text</item>
        <item name="android:background">@drawable/selector_round_ghost_white_button</item>
    </style>
</resources>
